{% extends 'base.html.twig' %}

{% block title %}Formation
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>
								{{ formation.nom }}

								<div class="page-title-subheading" style="opacity: 1;">

									Créée Le
									{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i') : '' }}
									Par
									{{ formation.createdBy }}
								</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_formations_index') }}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
										</span>
										Retour à la liste
									</button>
								</a>
								<a href="{{ path('app_formations_edit',{id:formation.id}) }}">
									<button class="mb-2 mr-2 btn-outline-2x btn btn-shadow-warning btn-outline-warning">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use edit"></i>
										</span>
										Modifier
									</button>
								</a>

								{{ include('formations/_delete_form.html.twig') }}


							</div>
						</div>
					</div>
				</div>


				<div class="tabs-animation">
					<div class="row">


						<div class="col-md-6">
							<div class="main-card mb-3 card">
								<div class="card-header">Apprenants</div>
								<div class="card-body">

									{% for user in formation.users %}

										{{user.email}}

									{% endfor %}

								</div>

							</div>

						</div>

					</div>


				</div>


			</div>
			{{ block("Footer", "Menus/Footer.html.twig") }}
			{{ block("Timer", "Menus/timer.html.twig") }}
		{% endblock %}
