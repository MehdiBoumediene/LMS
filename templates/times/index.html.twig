{% extends 'base.html.twig' %}

{% block title %}Temps de conexion
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Temps de connexion

							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_times_new') }}">
									<button class="btn-shadow btn btn-success">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Temps de connexion
									</button>
								</a>
							</div>
						</div>

					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">User</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Chapitre</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Heur</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Minutes</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Secondes</th>

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 110.2px;" aria-label="Start date: activate to sort column ascending">actions</th>


												</tr>
											</thead>
											<tbody>

												{% for time in times %}
													<tr role="row" class="odd">

														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_users_show', {'id': time.user.id}) }}">{{ time.user.email }}</a>
														</td>
														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_users_show', {'id': time.chapitre.id}) }}">{{ time.chapitre.nom }}</a>
														</td>
														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_times_edit', {'id': time.id}) }}">{{ time.heur }}</a>
														</td>
														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_times_edit', {'id': time.id}) }}">{{ time.minutes }}</a>
														</td>
														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_times_edit', {'id': time.id}) }}">{{ time.secondes }}</a>
														</td>

														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_times_edit', {'id': time.id}) }}">
																<button class="mb-2 mr-2 btn-icon btn-pill btn btn-link">
																	<i class="pe-7s-tools btn-icon-wrapper"></i>Modifier</button>
															</a>
														</td>
													</tr>
												{% else %}
													<tr role="row" class="odd">
														<td class="sorting_1 dtr-control" colspan="6">no records found</td>
													</tr>
												{% endfor %}

											</tbody>

										</table>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>
			</div>

		</div>
	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}
{% endblock %}
