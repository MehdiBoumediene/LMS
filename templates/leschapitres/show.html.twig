{% extends 'base.html.twig' %}

{% block title %}chapitre
{% endblock %}

{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>
								{{ leschapitre.nom }}


								<div class="page-title-subheading" style="opacity: 1;">

									Créée Le
									{{ leschapitre.createdAt ? leschapitre.createdAt|date('Y-m-d H:i') : '' }}
									Par
									{{ leschapitre.createdBy }}
								</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_leschapitres_index') }}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
										</span>
										Retour à la liste
									</button>
									<button class="mb-2 mr-2 btn-outline-2x btn btn-shadow-warning btn-outline-warning">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use edit"></i>
										</span>
										Modifier
									</button>

									{{ include('leschapitres/_delete_form.html.twig') }}

								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="row ">
						<div class="col-md-6 ">
							<h5 style="font-size:15px; font-weight: bold;">Formation:
								<span style="font-size:15px; font-weight: normal;">{{leschapitre.formations.nom}}</span>
							</h5>
							<h5 style="font-size:15px; font-weight: bold;">Description de la formation:
								<span style="font-size:15px; font-weight: normal;">{{leschapitre.formations.description|raw()}}</span>
							</h5>
						</div>

						<div class="col-md-6">
							<h5 style="font-size:15px; font-weight: bold;">Module:
								<span style="font-size:15px; font-weight: normal;">{{leschapitre.nom}}</span>
							</h5>
							<h5 style="font-size:15px; font-weight: bold;">Description du module:
								<span style="font-size:15px; font-weight: normal;">{{leschapitre.description|raw()}}</span>
							</h5>
						</div>

					</div>
				</div>
				<br>
				<div class="row">
					<div class="col-md-12">
						<div class="main-card mb-3 card">
							<div class="card-header">Documents</div>
							<div class="card-body">
								<div class="row">
									{% for file in leschapitre.files %}


										<div class="col-md-3" style="text-align:center;">
											{% if file.name | split('.')[1] == 'docx' %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('word.jpg')}}" width="130">
													<br>
													{{file.name}}

												</a>
											{% elseif  file.name | split('.')[1] == 'xls'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('excel.png')}}" width="130">
													<br>
													{{file.name}}

												</a>
											{% elseif  file.name | split('.')[1] == 'xlsx'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('excel.png')}}" width="130">
													<br>
													{{file.name}}


												</a>
											{% elseif  file.name | split('.')[1] == 'pptx'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('PowerPoint.png')}}" width="130">
													<br>
													{{file.name}}


												</a>
											{% elseif  file.name | split('.')[1] == 'ppt'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('PowerPoint.png')}}" width="130">
													<br>
													{{file.name}}


												</a>

											{% elseif  file.name | split('.')[1] == 'pptm'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('PowerPoint.png')}}" width="130">
													<br>
													{{file.name}}


												</a>
											{% elseif  file.name | split('.')[1] == 'pdf'  %}
												<a href="https://docs.google.com/gview?url=https://lms.sigmaformations.fr{{asset('uploads')}}/{{file.name}}}&embedded=true" target="blank_">
													<img src="{{asset('pdf.png')}}" width="100">
													<br>
													{{file.name}}

												</a>


											{% endif %}
										</div>


									{% endfor %}
								</div>
							</div>

						</div>

					</div>


				</div>

				<div class="row">
					<div class="col-md-12">
						<div class="main-card mb-3 card">
							<div class="card-header">Videos</div>
							<div class="card-body">
								{% for media in leschapitre.medias %}
									<video width="100%" height="540" controls>
										<source src="{{asset('uploads')}}/{{media.name}}" type="video/mp4">
										Your browser does not support the video tag.
									</video>
								{% endfor %}
							</div>

						</div>

					</div>


				</div>


			</div>

			{{ block("Footer", "Menus/Footer.html.twig") }}
			{{ block("Timer", "Menus/timerChapitre.html.twig") }}


		{% endblock %}
