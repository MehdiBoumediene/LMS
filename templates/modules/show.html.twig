{% extends 'base.html.twig' %}

{% block title %}modules
{% endblock %}

{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>
								{{ module.nom }}


								<div class="page-title-subheading" style="opacity: 1;">

									Créée Le
									{{ module.createdAt ? module.createdAt|date('Y-m-d H:i') : '' }}
									Par
									{{ module.createdBy }}
								</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_modules_index') }}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use arrow-circle-left"></i>
										</span>
										Retour à la liste
									</button>
									<button class="mb-2 mr-2 btn-outline-2x btn btn-shadow-warning btn-outline-warning">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-fw" aria-hidden="true" title="Copy to use edit"></i>
										</span>
										Modifier
									</button>

									{{ include('modules/_delete_form.html.twig') }}

								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="row ">
						<div class="col-md-6 ">
							<h5 style="font-size:15px; font-weight: bold;">Formation:
								<span style="font-size:15px; font-weight: normal;">{{module.formations.nom}}</span>
							</h5>
							<h5 style="font-size:15px; font-weight: bold;">Description de la formation:
								<span style="font-size:15px; font-weight: normal;">{{module.formations.description|raw()}}</span>
							</h5>
						</div>

						<div class="col-md-6">
							<h5 style="font-size:15px; font-weight: bold;">Module:
								<span style="font-size:15px; font-weight: normal;">{{module.nom}}</span>
							</h5>
							<h5 style="font-size:15px; font-weight: bold;">Description du module:
								<span style="font-size:15px; font-weight: normal;">{{module.description|raw()}}</span>
							</h5>
						</div>

						<div class="col-md-12">
							<br>
							<div class="main-card mb-3 card">
								<div class="card-body">


									<h5 style="font-size:16px; font-weight: bold;">Documents:</h5>
									{% for file in module.files %}

										<iframe class="doc" src="https://docs.google.com/gview?url=https://127.0.0.1:8000{{asset('uploads')}}/{{file.name}}&embedded=true"></iframe{{file.name}}<hr> {% endfor %}
										<h5 style="font-size:15px; font-weight: bold;">Videos:</h5>
										{% for media in module.medias %}
											<video width="100%" height="540" controls>
												<source src="{{asset('uploads')}}/{{media.name}}" type="video/mp4">
												Your browser does not support the video tag.
											</video>
										{% endfor %}


									</div>
								</div>
							</div>


						</div>
					</div>
				</div>

				{{ block("Footer", "Menus/Footer.html.twig") }}


			{% endblock %}
