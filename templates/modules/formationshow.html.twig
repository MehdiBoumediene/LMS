{% extends 'base.html.twig' %}
{% block title %}
	Modules

{% endblock %}
{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}
		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>
								Formations


							</div>
						</div>
						<div class="page-title-actions"></div>
					</div>
				</div>
				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
								<div class="row">

									{% for formation in formations %}
										<div class="col-sm-4">
											<a href="{{ path('app_moduleschapitres', {'id': formation.id}) }}">
												<div class="mb-3 text-white card-border bg-dark card">
													<div class="card-header">
														<i class="header-icon lnr-screen icon-gradient bg-warm-flame"></i>
														{{formation.nom}}


													</div>
													<div class="card-body" style="padding:0px;">
														{% for couverture in formation.couvertures %}
															<img width="300.98" src="{{asset('uploads')}}/{{couverture.name}}">
														{% endfor %}
														<span style="color:white; position: relative;padding: 5px;float: left;margin-top: 0px;padding-bottom: 6px;">
															{{ formation.description|raw()}}
														</span>

													</div>
													<div class="d-block text-right card-footer">

														<a href="{{ path('app_moduleschapitres', {'id': formation.id}) }}">
															<button class="btn btn-warning btn-lg">
																Suivre cette formation
															</button>
														</a>
													</div>
												</div>
											</a>
										</div>
									{% endfor %}


								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}
{% endblock %}
