{% extends 'base.html.twig' %}
{% block title %}
    Modules
    
{% endblock %}
{% block body %}
    {{ block("MenuTop", "Menus/MenuTop.html.twig") }}
    <div class="app-main">
        {{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}
        <div class="app-main__outer">
            <div class="app-main__inner">
                <div class="app-page-title">
                    <div class="page-title-wrapper">
                        <div class="page-title-heading">
                            <div class="page-title-icon">
                                <i class="lnr-users icon-gradient bg-strong-bliss"></i>
                            </div>
                            <div>
                                Formations
                                								
                                							
                            </div>
                        </div>
                        <div class="page-title-actions"></div>
                    </div>
                </div>
                <div class="tabs-animation">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row">
                                {% for module in modules %}
                                <div class="col-sm-4">
                                <div class="mb-3 text-white card-border bg-dark card">
                                    <div class="card-header">
                                        <i class="header-icon lnr-screen icon-gradient bg-warm-flame"></i>
                                        {{module.nom}}
                                                
                                    
                                    </div>
                                    <div class="card-body">
                                       {{ module.description|raw()}}
                                    </div>
                                    <div class="d-block text-right card-footer">
                                       
                                        <a href="{{ path('app_modules_show', {'id': module.id}) }}"><button class="btn btn-warning btn-lg">
                                            Suivre cette formation
                                        </button></a>
                                    </div>
                                </div>
                            </div>
                                {% endfor %}
                                   
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ block("Footer", "Menus/Footer.html.twig") }}
{% endblock %}
