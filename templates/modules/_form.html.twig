<form method="POST" action="{{ path('app_modules_new') }}" enctype="multipart/form-data">
	<div class="form-row">
		<div class="col-md-3">
			{{ form_row(form.nom,{'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.nom) }}
		</div>

		<div class="col-md-3">

			{{ form_row(form.formations,{'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.formations) }}
		</div>
		<div class="col-md-3">

			{{ form_row(form.chapitre,{'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.chapitre) }}
		</div>

		<div class="col-md-6">
			{{ form_row(form.description,{'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.description) }}
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-3">

			{{ form_row(form.couvertures,{'attr': {'class': ''}}) }}
			{{ form_errors(form.couvertures) }}
		</div>
		<div class="col-md-3">

			{{ form_label(form.files, 'Nom du document', {'label_attr': {'class': 'foo'}}) }}
			<input type="text" name="nomFile" id="nomFile" class="form-control"><br>
			{{ form_row(form.files,{'attr': {'class': ''}}) }}
			{{ form_errors(form.files) }}
		</div>
		<div class="col-md-3">
			{{ form_label(form.files, 'Nom de la video', {'label_attr': {'class': 'foo'}}) }}
			<input type="text" name="nomVideo" id="nomVideo" class="form-control"><br>
			{{ form_row(form.medias,{'attr': {'class': ''}}) }}
			{{ form_errors(form.medias) }}
		</div>


	</div>

	{{ form_rest(form) }}

	<br>
	<br>
	<br>
	<button class="mt-1 btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
